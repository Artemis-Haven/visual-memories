{% extends 'base.html.twig' %}

{% block body %}

<h3>{{ gallery }} <small><a href="{{ path('gallery_edit', {'id': gallery.id}) }}">Editer</a></small></h3>
<div class="text-muted">{{ gallery.galleryHasMedias|length }} photo(s)</div>
{% for item in gallery.galleryHasMedias %}
	<a href="{{ path('gallery_show_media', {'galleryId': gallery.id, 'mediaId': item.media.id}) }}">
    	{% thumbnail item.media, 'small' with {'class': 'img-thumbnail'} %}
    </a>
{% else %}
<div class="text-muted">Cette galerie ne contient aucune image</div>
{% endfor %}

<br />

<a href="{{ path('gallery_add_photos', {'id': gallery.id}) }}">{{ icon('plus') }} Ajouter des photos</a>

{% endblock %}