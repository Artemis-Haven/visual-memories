{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1>Titre</h1>
    <div class="row">
        <div class="col-md-4">
            <h3>Personnes</h3>
            <ul>
            	{% for person in persons %}
            	    <li><a href="{{ path('person_show', {'id': person.id}) }}">{{ icon('user') }} {{ person }}</a></li>
            	{% else %}
            		<li class="text-muted">Aucune personne saisie</li>
            	{% endfor %}
            	<li><a href="{{ path('person_new') }}">{{ icon('plus') }} Nouvelle personne</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h3>Evénements</h3>
            <ul>
            	{% for event in events %}
            	    <li><a href="{{ path('event_show', {'id': event.id}) }}">{{ icon('calendar') }} {{ event }}</a></li>
            	{% else %}
            		<li class="text-muted">Aucun événement saisi</li>
            	{% endfor %}
            	<li><a href="{{ path('event_new') }}">{{ icon('plus') }} Nouvel événement</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h3>Lieux</h3>
            <ul>
            	{% for place in places %}
            	    <li>{{ icon('place') }} {{ place }}</li>
            	{% else %}
            		<li class="text-muted">Aucun lieu saisi</li>
            	{% endfor %}
            	<li><a href="{{ path('place_new') }}">{{ icon('plus') }} Nouveau lieux</a></li>
            </ul>
        </div>
    </div>
</div>


{% endblock %}